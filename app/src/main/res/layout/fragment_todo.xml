<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentToDo"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/toDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewForFragmentToDo"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/toDo"
        android:textSize="@dimen/header_size"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForFragmentToDo"
        android:layout_width="match_parent"
        android:layout_height="464dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        android:padding="@dimen/fab_margin"
        app:layout_constraintBottom_toTopOf="@+id/insertTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toDo"
        tools:listitem="@layout/task_list"/>

   <LinearLayout
       android:id="@+id/insertTask"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintHorizontal_weight="0"
       android:layout_margin="10dp"
       android:padding="10dp"
       app:layout_constraintTop_toBottomOf="@id/recyclerViewForFragmentToDo"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent">
       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/inputTask"
           android:hint="@string/inputTask"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           tools:ignore="InvalidId" />
       <Button
           android:id="@+id/addTask"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="50dp"
           android:layout_marginLeft="50dp"
           android:text="@string/Add"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.918"
           app:layout_constraintStart_toStartOf="parent" />

   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>